
-
    const skill_list = {
        "Major" : ["C++/C", "Golang", "UNIX API"],
        "Minor" : ["Js/Ts", "bash/sh"],
        "Other" : ["CMake", "Docker", "CrossBuild"],
        "Frameworks in use" : ["Qt", "Wt", "ODA", "Eigen", "OpenCV", "ReactJS"]
    }

mixin skill_card(name)
    p.skill-card= name

.card.skills
    .skill-list
        each value, key in skill_list
            .skill-row
                p= key
                each sk in value
                    +skill_card(sk)


